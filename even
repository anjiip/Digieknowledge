 // Write a Method to Check if a Number is Even
public class evenodd {
   static int n = 25; // give the no to test

   public static void evenno() {
       if (n % 2 == 0) {
           System.out.println("no is even"); // if else checks for even condItion & displays output
       } else {
           System.out.println("no is odd");
       }
   }
   public static void main(String[] args)
       {
           evenno(); // call the method
       }


}
